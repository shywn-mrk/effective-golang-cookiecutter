# EditorConfig for a standard Go project
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Go source files
[*.go]
indent_size = 4

# YAML configuration files
[*.yaml]
indent_size = 2

# Markdown documentation
[*.md]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Makefiles (tabs required by spec)
[Makefile]
indent_style = tab

# Dockerfiles
[Dockerfile]
indent_size = 2
